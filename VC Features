import chess
import random
import time
import json
import pyaudio

# Initialize the move log
move_log = []

# Function to undo a move
def undo(board):
    if move_log:
        last_move = move_log.pop()
        board.pop()
        print(f"Undoing move: {last_move}")
    else:
        print("No moves to undo.")

